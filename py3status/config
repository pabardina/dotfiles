# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
  interval = 5
}

order += "xrandr"
order += "mic"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume_status master"
#order += "spotify"
#order += "weather_yahoo"
order += "battery 0"
order += "load"
order += "tztime local"

xrandr {
}

mic {
}

wireless _first_ {
        format_up = "W:(%quality %essid)%ip"
        format_down = "W:down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}

path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/tun0"
}

battery 0 {
  format = "%percentage %remaining"
}


# show time colorfully
#rainbow time {
	tztime local {
        format = "%d-%m-%Y %H:%M"
	}
#}

load {
        format = "%1min"
}

sysdata {
	format = "CPU: {cpu_usage}% | Mem: {mem_used}G"
}

disk "/" {
        format = "/ %avail"
}

spotify {
    format = "{title} - {artist}"
    format_down = ""
}

volume_status master {
        cache_timeout = 1
        format = "♪: {percentage}%"
        format_muted = "♪: muted ({percentage}%)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        on_click 3 = "exec pactl set-source-mute 2 toggle && killall -s USR1 py3status"
}

weather_yahoo {
    woeid = 628886
    format_today = "{icon}{temp}°{units} {text}"
    forecast_days = 1
}
