#bindsym XF86AudioMicMute exec pactl set-source-mute 2 toggle # mute mic
bindsym $mod+F4 exec pactl set-source-mute 2 toggle # mute mic

# screen brightness controls
bindsym XF86MonBrightnessUp exec sudo light -A 5 # increase screen brightness
