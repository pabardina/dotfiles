# Screenshots
# Screenshot fullscreen
bindsym Print exec "scrot -q 100 '/home/pab/screenshots/%Y-%m-%d-%H-%M-%S_$wx$h.png' -e 'xclip -i -selection clipboard'"
# Screenshot with selection
bindsym $mod+Print exec "sleep 0.2; scrot -q 100 -s '/home/pab/screenshots/%Y-%m-%d-%H-%M-%S_$wx$h.png' -e 'xclip -i -selection clipboard'"
# Screenshot current focused window
bindsym Shift+Print exec "scrot -q 100 -u '/home/pab/screenshots/%Y-%m-%d-%H-%M-%S_$wx$h.png' -e 'xclip -i -selection clipboard'"


# volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -5% 

